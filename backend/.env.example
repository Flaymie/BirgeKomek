# Конфигурация сервера
PORT=5050
NODE_ENV=development

# Подключение к базе данных MongoDB
# Укажите вашу строку подключения. Например, для локальной базы:
MONGO_URI=mongodb://localhost:27017/birge-komek

# JSON Web Token (JWT)
# Замените на любую длинную и сложную секретную строку
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=7d

# Настройки Telegram бота
# Укажите токен вашего бота из @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Имя пользователя вашего бота (без @)
TELEGRAM_BOT_USERNAME=YourTelegramBotUsernameBot

# URL фронтенда (для генерации ссылок в уведомлениях и т.д.)
FRONTEND_URL=http://localhost:3000

# Настройки Redis (для кеширования и онлайн-статусов)
# Если Redis не используется или работает на стандартных настройках, можно оставить как есть
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Конфигурация для Gemini API (для модерации контента)
# Если не используется, можно оставить пустым
GEMINI_API_KEY=your_gemini_api_key 