# Конфигурация сервера
PORT=5050
NODE_ENV=development

# Подключение к базе данных MongoDB
# Укажите вашу строку подключения. Например, для локальной базы:
MONGODB_URI=mongodb://localhost:27017/birge-komek

# JSON Web Token (JWT)
# Замените на любую длинную и сложную секретную строку
JWT_SECRET=your_super_secret_jwt_key
JWT_EXPIRES_IN=7d

# Настройки Telegram бота
# Укажите токен вашего бота из @BotFather
BOT_TOKEN=your_telegram_bot_token

# URL фронтенда и бэкенда. Используются для генерации ссылок, CORS и т.д.
# Убедитесь, что они доступны с устройства, где будет проходить демонстрация.
FRONTEND_URL=http://localhost:3000
# Эта переменная может дублировать FRONTEND_URL или использоваться для других целей.
# Вставьте значение из вашего .env
REACT_APP_API_URL=http://localhost:5050

# Настройки Redis (для кеширования и онлайн-статусов)
REDIS_URL=redis://localhost:6379

# Конфигурация для Gemini API (для модерации контента)
GEMINI_AUTOMOD_ENABLED=true
GEMINI_API_KEY=your_gemini_api_key 